@model TaiKhoan
@{
    ViewBag.Title = "Thông tin cá nhân";
    ViewBag.Controller = "Thông tin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewBag.Title</h3>
            </div><!-- /.box-header -->
            <!-- form start -->

            <div class="box-body">
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li class="active"><a>Thông tin cá nhân</a></li>
                        <li><a href="/account/changepassword">Đổi mật khẩu</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active">
                            <form action="/account/profile" method="post" class="form-horizontal">
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(x => x.MaTaKhoan)
                                @Html.HiddenFor(x => x.HinhDaiDien)
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Ảnh dại diện</label>
                                    <div class="col-md-5">
                                        <a class="btn btn-info" id="btnAddImgPor">Tải lên</a>
                                        <br />
                                        <br />
                                        <img id="imgHinhAnh" src="@Model.HinhDaiDien" width="150" height="150" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label"></label>
                                    <div class="col-md-5">
                                        <button type="submit" class="btn btn-primary">Lưu</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>