@model UserMeta
@{
    ViewBag.Title = "Thông tin cá nhân";
    ViewBag.Controller = "Thông tin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewBag.Title</h3>
            </div><!-- /.box-header -->
            <!-- form start -->

            <div class="box-body">
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li><a href="/account/profile">Thông tin cá nhân</a></li>
                        <li class="active"><a>Đổi mật khẩu</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active">
                            <form action="/account/changepassword" method="post" class="form-horizontal">
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Mật khẩu mới</label>
                                    <div class="col-sm-4">
                                        @Html.TextBoxFor(x => x.Password, new Dictionary<string, object>
                                        {
                                            {"class", "form-control"},
                                            {"type", "password" }
                                        })
                                        @Html.ValidationMessageFor(x => x.Password)
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Xác nhận mật khẩu</label>
                                    <div class="col-sm-4">
                                        @Html.TextBoxFor(x => x.ConfirmPassword, new Dictionary<string, object>
                                        {
                                            {"class", "form-control"},
                                            {"type", "password" }
                                        })
                                        @Html.ValidationMessageFor(x => x.ConfirmPassword)
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label"></label>
                                    <div class="col-md-5">
                                        <button type="submit" class="btn btn-primary">Lưu</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>