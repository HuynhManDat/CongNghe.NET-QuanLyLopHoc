@model GiangVien

@Html.HiddenFor(x => x.MaGiangVien)
@Html.HiddenFor(x => x.MaTaiKhoan)

<div class="box-body">
    <div class="form-group">
        <label class="col-md-3 control-label">Họ tên</label>
        <div class="col-md-4">
            @Html.TextBoxFor(x => x.TenGiangVien, new Dictionary<string, object>
                {
                    {"class", "form-control"},
                    {"required", "required" },
                    {"maxlength","150" }
                })
            @Html.ValidationMessageFor(x => x.TenGiangVien)
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Email</label>
        <div class="col-md-4">
            @Html.TextBoxFor(x => x.Email, new Dictionary<string, object>
            {
                {"class", "form-control"},
                {"required", "required" },
                {"type", "email" },
                {"maxlength","150" }
            })
            @Html.ValidationMessageFor(x => x.Email)
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Số điên thoại</label>
        <div class="col-md-4">
            @Html.TextBoxFor(x => x.SoDienThoai, new Dictionary<string, object>
            {
                {"class", "form-control"},
                {"maxlength","150" }
            })
            @Html.ValidationMessageFor(x => x.SoDienThoai)
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Địa chỉ</label>
        <div class="col-md-4">
            @Html.TextBoxFor(x => x.DiaChi, new Dictionary<string, object>
            {
                {"class", "form-control"},
                {"maxlength","500" }
            })
            @Html.ValidationMessageFor(x => x.DiaChi)
        </div>
    </div>
</div>