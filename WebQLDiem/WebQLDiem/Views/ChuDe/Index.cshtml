@model List<ChuDe>
@{
    ViewBag.Title = "Danh sách chủ đề";
    ViewBag.Controller = "Chủ đề";
    ViewBag.QuanLy = "active";
    ViewBag.ChuDe = "active";
    ViewBag.Id = "view-null";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">@ViewBag.Title</h3>
                <a href="@Url.Action("Add")" class="btn btn-success pull-right">Thêm</a>
            </div><!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>Tên chủ đề</th>
                            <th>Ngày tạo</th>
                            <th>Người tạo</th>
                            <th class="w100">Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.TenChuDe</td>
                                <td>@item.NgayTao</td>
                                <td>@item.TaiKhoan.TenDangNhap</td>
                                <td>
                                    <a href="@Url.Action("Edit")/@item.MaChuDe" class="btn btn-info btn-sm">Sửa</a>
                                    <a href="@Url.Action("Delete")/@item.MaChuDe" onclick="return confirm('Bạn chắc chắn muốn xóa mục đã chọn?')" class="btn btn-danger btn-sm">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</div><!-- /.row -->

