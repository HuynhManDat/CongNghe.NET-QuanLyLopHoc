@model LopHoc
@{
    ViewBag.Title = "Sửa lớp học";
    ViewBag.Controller = "Lớp học";
    ViewBag.QuanLy = "active";
    ViewBag.LopHoc = "active";
    ViewBag.Id = "view-null";
    Layout = null;
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>
<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <!-- form start -->
            <form action="@Url.Action("Edit")" method="post" class="form-horizontal">
                @Html.AntiForgeryToken()
                @Html.Partial("_Update", Model)
                <div class="box-footer">
                    <a href="@Url.Action("Index")" class="btn btn-default pull-left">Danh sách</a>
                    <button type="submit" class="btn btn-primary pull-right">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/ClientScripts/mvcfoolproof.unobtrusive.min.js"></script>