@model TraoDoiModel
@{
    ViewBag.Title = "LoadNhanXet";
    Layout = null;
}

@if (Model.Count > 0)
{
    if (Model.Type == (int)LoaiThongBao.BaiTap)
    {
        <div class="timeline-body" onclick="xembaitapnhanxet(@Model.Ma)">
            Có @Model.Count nhận xét về bài tập
        </div>
    }

    if (Model.Type == (int)LoaiThongBao.TaiLieu)
    {
        <div class="timeline-body" onclick="xemtailieunhanxet(@Model.Ma)">
            Có @Model.Count nhận xét về tài liệu
        </div>
    }

    if (Model.Type == (int)LoaiThongBao.ThongBao)
    {
        <div class="timeline-body" onclick="xemthongbaonhanxet(@Model.Ma)">
            Có @Model.Count nhận xét về thông báo
        </div>
    }
}

